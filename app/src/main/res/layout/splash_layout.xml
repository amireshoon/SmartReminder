<?xml version="1.0" encoding="utf-8"?>


<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/splash_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/b">

    <View
        android:id="@+id/splash_image_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:background="@color/b" />

    <ap.behrouzi.smartr.utils.ResizeCallbackImageView
        android:id="@+id/iv_splash_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        tools:background="#1DA1F2"
        tools:src="@drawable/twitter_logo_white" />
</FrameLayout>